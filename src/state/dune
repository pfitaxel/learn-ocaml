(rule
 (targets learnocaml_version.ml)
 (action (with-stdout-to %{targets}
           (echo "let v = \"%{read-strings:../../VERSION}\"")))
)

(library
 (name learnocaml_data)
 (wrapped false)
 (modules Learnocaml_data)
 (libraries asak
            sha
            cryptokit
            learnocaml_toplevel_history
            learnocaml_report
            learnocaml_repository)
)

(library
 (name learnocaml_api)
 (wrapped false)
 (flags :standard -warn-error +8)
 (modules Learnocaml_version Learnocaml_api)
 (libraries ocplib-json-typed
            ezjsonm
            conduit
            learnocaml_data)
)

(library
 (name token_index)
 (wrapped false)
 (modules Token_index)
 (libraries base64 lwt lwt.unix lwt_utils learnocaml_api learnocaml_data cryptokit netstring safepass irmin irmin-git)
)

(library
 (name learnocaml_store)
 (wrapped false)
 (modules Learnocaml_store)
 (libraries token_index lwt_utils learnocaml_api)
)
